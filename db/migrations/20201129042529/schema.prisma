generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model Card {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  author    String
  title     String
  content   String
  picture   String?
  uuid      String
  eventId   Int
  event     Event    @relation(fields: [eventId], references: [id])
}

model Event {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  creator   String
  recipient String
  uuid      String
  cards     Card[]
}
